$required = [
    'Const.php',
    'Vendor/autoload.php',
];

require 'dependencies.php';

loadDependencies($required);

try {
    $request = new \App\Library\Io\Request($argv, $argc);
    $app     = new \App\Library\App();
    switch($request->getAction()) {
        case 'start':
            $app->start();
            break;
        case 'show':
            $app->show();
            break;
        case 'help':
        default:
            $actions = ['start', 'show'];
            sort($actions);
            echo 'Usage: {' . implode(', ', $actions) . '}', "\n";
    }
} catch (\Exception $e) {
    echo $e->getMessage(), "\n";
    exit(1);
}
